{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Brave",
      "userDataDir": true,
      "runtimeExecutable": "${env:CHROME_PATH}",
      "url": "http://localhost:8080/test/web/index.html",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Deno run ${file}", // from https://deno.land/manual@v1.8.3/getting_started/debugging_your_code#vscode
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "-A",
        "--inspect-brk",
      ],
      "attachSimplePort": 9229
    },
    {
      "name": "Deno test ${file}", // manually created
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "-A",
        "--inspect-brk"
      ],
      "attachSimplePort": 9229
    },
    {
      "name": "Deno build", // manually created
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
         "run", "-A",   "--inspect-brk" ,"npm:vite", "build"
      ],
      "attachSimplePort": 9229
    },
  ]
}
