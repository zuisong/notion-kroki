{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  },
  "tasks": {
    "build": "deno task clean && deno task test-cov && deno task esbuild",
    "clean": "rm -rf dist/ coverage/",
    "esbuild": "deno run -A build.ts",
    "bundle": "deno bundle --no-check src/main.ts",
    "fmt": "deno fmt src/ test/ build.ts dev_deps.ts",
    "test-cov": "deno test --coverage=coverage --no-check -A && deno coverage coverage --lcov --output=coverage/lcov.info"
  },
  "importMap": "import_map.json",
  "lint": {
    "files": {
      "include": [
        "src/",
        "build.ts",
        "dev_deps.ts"
      ],
      "exclude": [
        "dist/",
        "notion-kroki.user.js"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/",
        "test/",
        "*.ts"
      ],
      "exclude": [
        "src/testdata/"
      ]
    },
    "options": {}
  },
  "test": {
    "files": {
      "include": [
        "test/"
      ],
      "exclude": []
    }
  }
}
